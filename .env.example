# URL de la API para el frontend: environment.ts, environment.stage.ts, environment.prod.ts
# =============================================================================

APP_ENV=local
APP_DEBUG=true

# --- Base de datos ---
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASS=Oscorpsvr
DB_CHARSET=utf8mb4
DB_NAME=vc_db
DB_LICENSE_NAME=crearttech_clientes

# --- CORS (cambiar por entorno) ---
# Dev:    CORS_ALLOW_ORIGIN=*
