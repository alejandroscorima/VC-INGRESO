# Environment variables for VC-INGRESO (backend PHP)
# Copy this file to .env and adjust values for your environment.

APP_ENV=local
APP_DEBUG=true

# Database connection (mismo host/port/user/pass; distintas BD por uso)
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASS=change_me
DB_CHARSET=utf8mb4

# Bases de datos
# vc_db.php       -> DB_NAME          Sistema principal (condominio: ingresos, usuarios, mascotas, reservas, etc.)
# bdLicense.php   -> DB_LICENSE_NAME  Licencias/clientes Crearttech (quién usa el sistema: VC5, Planicie5, etc.)
DB_NAME=vc_db
DB_LICENSE_NAME=crearttech_clientes

# Deprecadas / a eliminar (no usar en código nuevo)
# bd.php / bdEntrance.php -> DB_ENTRANCE_NAME (vc_entrance: legacy casino/ludopatas)
# bdData.php              -> DB_DATA_NAME     (vc_data: legacy primeras versiones)
DB_ENTRANCE_NAME=vc_entrance
DB_DATA_NAME=vc_data

# CORS
CORS_ALLOW_ORIGIN=*

# Security - JWT Authentication
JWT_SECRET=change_me_to_a_secure_random_string
CSRF_SECRET=change_me_to_a_secure_random_string

# External APIs
RENIEC_API_TOKEN=api_token_reniec
