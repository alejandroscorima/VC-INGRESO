# Environment variables for VC-INGRESO (backend PHP)
# Copy this file to .env and adjust values for your environment.

APP_ENV=local
APP_DEBUG=true

# Database connection (mismo host/port/user/pass; distintas BD por uso)
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASS=change_me
DB_CHARSET=utf8mb4

# Nombre de cada base de datos (cada archivo de conexiÃ³n usa una)
# vc_db.php       -> DB_NAME
# bd.php          -> DB_ENTRANCE_NAME
# bdEntrance.php  -> DB_ENTRANCE_NAME
# bdLicense.php   -> DB_LICENSE_NAME
# bdData.php      -> DB_DATA_NAME
DB_NAME=vc_db
DB_ENTRANCE_NAME=vc_entrance
DB_LICENSE_NAME=vc_clients
DB_DATA_NAME=vc_data

# CORS
CORS_ALLOW_ORIGIN=*

# Security - JWT Authentication
JWT_SECRET=change_me_to_a_secure_random_string
CSRF_SECRET=change_me_to_a_secure_random_string

# External APIs
RENIEC_API_TOKEN=your_reniec_api_token_here
